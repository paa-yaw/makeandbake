<div class="wrapper">
<div class="display_image_wrapper">
<%= link_to (image_tag @product.imageone_url(:display)), @product.imageone.url, class: "img-thumbnail" %>
<br>
<% if !@product.imagetwo.blank? %>
<div class="sub_image_wrapper">
  <%= link_to (image_tag @product.imagetwo_url(:thumb), size: "150x120"), @product.imagetwo.url, class: "img-thumbnail" %>
<% else %>
<% end %>

<% if !@product.imagethree.blank? %>
  <%= link_to (image_tag @product.imagethree_url(:thumb), size: "150x120"), @product.imagethree.url, class: "img-thumbnail" %> 
<% else %>
<% end %>

<% if !@product.imagefour.blank? %>
  <%= link_to (image_tag @product.imagefour_url(:thumb), size: "150x120"), @product.imagefour.url, class: "img-thumbnail" %>
</div>  
<% else %>
<% end %>




</div>
</div>



<div class="cont1 span_2_of_a1">
	<h3 class="m_3"><%= @product.name %></h3>

	<div class="price_single">
		<span class="reducedfrom">GHS 66.00</span>
		<span class="actual">GHS <%= @product.price%></span>
	</div>
	<ul class="options">
		<h4 class="m_9">Cake Maker: <%= @product.user.first_name if @product.user %> <%= @product.user.first_name %></h4>
		  <h4>No Shop</h4>
		<br>
		<br>
		<% if current_user && (@product.user == current_user) %>
		  <% if @product.tags.any? %>
		  <b>Category(ies):</b>
		  <b><%#= render @product.tags %></b>
		  <% @product.tags.each do |tag| %>
		    <b><%= link_to fa_icon("times") + tag.name, remove_product_tag_path(@product, tag), method: :delete, class: "buy_now" %></b>
		  <% end %>
		  <% else %>
		  No Categories	
		  <% end %>
		<% elsif !current_user %>
		  <% if @product.tags.any? %>
		   <b>Category(ies):</b>
		  <b><%#= render @product.tags %></b>
		  <% @product.tags.each do |tag| %>
		    <b class="buy_now"><%= tag.name %></b>
		  <% end %>
		  <% else %>
		    No Categories
		  <% end %>
		<% end %>
		<br>
		<br>
		<% if current_user %>
		<% if @product.user == current_user && current_user.seller? %>
		<li><%= link_to fa_icon("pencil") + " Edit", edit_shopless_product_path(@product) %></li>
		<li><%= link_to fa_icon("trash-o") + " Remove", shopless_product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %></li>
		<li><%= link_to fa_icon("upload") + " Upload Another Cake", new_shopless_product_path %></li>
		<% end %>
		<% end %>
		<li><%= link_to fa_icon("arrow-circle-right") + " Create Shop", new_shop_path %></li>

		<div class="clear"></div>
	</ul>
	<br>
	<div>
	  <%= link_to fa_icon("shopping-cart", class: "pull-right") + "Purchase Now", "#", class: "buy_now" %>
	</div>
	<br>
	<h4>Description</h4>
	<p class="m_desc"><%= @product.description %>.</p>

	<i class="fa fa-share-alt" aria-hidden="true"> Share: <%= social_share_button_tag(@product.name, 'data-twitter-title' => "Looking for that cake for that event? Then makeandbake is your one-stop shop for cakes for any event?") %></i>
	
</div>