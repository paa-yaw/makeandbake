              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              All <%= pluralize(@sellers.count, "seller") %>
                          </header>
                          
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                              <tr>
                                 <th><i class="fa fa-seller" aria-hidden="true"></i>
 Full Name</th>
                                 <th><i class="fa fa-envelope" aria-hidden="true"></i>
</i> Email</th>
                                 <th><i class="icon_pin_alt"></i> seller's products</th>
                                 <th><i class="fa fa-mobile" aria-hidden="true"></i>
Phonenumber</th>
                                 <th><i class="icon_cogs"></i> Actions</th>
                              </tr>

                              <% @sellers.each do |seller| %>
                              <tr>
                                 <td><%= link_to "#{seller.first_name}, #{seller.last_name}", [:admin, seller] %></td>
                                 <td><%= seller.email %></td>
                                 <td><%= link_to "#{seller.first_name}'s products", admin_products_of_user_path(seller) %> (<%= pluralize(seller.products.count, "product") %>)</td>
                                 <td><%= seller.phonenumber %></td>
                                 <td>
                                  <div class="btn-group">
                                      <%= link_to fa_icon("pencil") + " Edit", [:edit, :admin, seller], class: "buy_now" %>
                                      <%= link_to fa_icon("trash") + " Delete", [:admin, seller], method: :delete, data: {confirm: "Are you sure you want to delete this seller?" }, class: "buy_now" %>

                                      <% if seller.shops.any? %>
    <%= link_to fa_icon("plus") + " another shop", new_admin_user_shop_path(seller), class: "buy_now" %>
  <% else %>
    <%= link_to fa_icon("plus") + " #{seller.first_name}'s first shop", new_admin_user_shop_path(seller), class: "buy_now" %>
  <% end %> 
  <% if seller.shops.any? %>
  <%= link_to fa_icon("arrow-circle-right", class: "pull-right") + "visit shops here ", admin_seller_shops_path(seller), class: "buy_now" %>
  <% else %>
  <%= link_to fa_icon("arrow-up") + " upload a product", new_admin_user_shopless_product_path(seller), class: "buy_now" %>
  <% end %>
                                  </div>
                                  </td>
                              </tr>
                              <% end %>
                              
                                                            
                           </tbody>
                        </table>
                      </section>
                  </div>
              </div>
              <!-- page end-->
