<h1>All Users</h1>
<div class="container">
<% @users.each do |user| %>
  <h3><%= link_to "#{user.first_name}, #{user.last_name}", [:admin, user] %> | <%= link_to "#{user.first_name}'s products", admin_products_of_user_path(user) %> (<%= pluralize(user.products.count, "product") %>) | <%= link_to "Edit", [:edit, :admin, user] %> | <%= link_to "Delete", [:admin, user], method: :delete, data: {confirm: "Are you sure you want to delete this user?" } %> | <%= link_to "create shop", new_admin_user_shop_path(user) %> |
  <% if user.shops.any? %>
  <%= link_to "go here to add a product to a shop", "#" %>
  <% else %>
  <%= link_to "upload product", new_admin_user_shopless_product_path(user) %>
  <% end %>
  </h3>
  <br>
  <br>
<% end %>
	
</div>