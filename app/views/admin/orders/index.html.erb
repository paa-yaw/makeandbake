<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                            <% if @orders.any? %>
                            <h1>All <%= pluralize(@orders.count, "order") %></h1>
                            <% else %>
                            <h1>No orders to explore currently.</h1>
                            <% end %>  
                          </header>
                          
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                              <tr>
                                 <th>
 Sender's Name</th>
                                 <th>Sender's Phonenumber</th> 
                                 <th>Category(ies)</th>
                                 <th>Size</th>
                                 
                                 <th>Delivery Date</th>
<!--                                  <th><i class="icon_mobile"></i> </th>
 -->                                 <!-- <th>verification status</th>
                                 <th><i class="icon_cogs"></i> Action</th> -->
                              </tr>
                              <% @orders.each do |order| %>
                              <tr>
                                 <td><%= order.sender_name %></td>
                                 <td><%= order.sender_phonenumber %></td>
                                 <td><% order.tags.each do |category| %>
                                       <%= category.name %>,
                                     <% end %>
                                 </td>
                                 <td><%= order.size %></td>
                                 <td><%= order.delivery_date %></td>
                                 <td><%= link_to fa_icon("arrow-right", class: "pull-right") + "for more details ", admin_order_path(order), class: "buy_now" %></td>
                              </tr>
                              <% end %>
</tbody>
</table>
</section>
</div>
</div>
