<div class="form_container">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-2 col-sm-12 col-xs-12" style="background-color:#000000;">
			<section class="panel">
				<header class="panel-heading">
					<h2 class="panel-title text-center">Welcome! Create a Shop Here!</h2> 
					<h4 class="text-center">Or proceed to <%= link_to fa_icon("arrow-right", class: "pull-right") + " Upload Your Cake", new_shopless_product_path, class: "buy_now" %></h4>
				</header>
				<div class="panel-body">
					<%= render "form", shop: @shop %>
				</div>
			</section>
		</div>
	</div>
</div>
