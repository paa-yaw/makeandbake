<div class="shop-container">
	<div class="shop-banner-image" %>
		<%= image_tag @shop.image_url(:shop_banner), size: "984x362" %>
	</div>
	<br>
	<div class="row">
		<div class="shop-description-mini col-md-6">
			<h1 class="shop-title"><%= @shop.name %> <i class="fa fa-check-circle" aria-hidden="true">Verified</i></h1>
			<br>
			<div class="shop-description">
				<p><%= @shop.description %></p>
			</div>	
			<br>
			<% if @shop.user == current_user && current_user.seller? %>
			<p><%= link_to fa_icon("pencil") + " Edit Shop Details", [:edit, @shop], class: "buy_now" %> OR <%= link_to fa_icon("arrow-circle-right") + " Upload Your Products", new_shop_product_path(@shop), class: "buy_now" %>
				<% end %>		
			</p>
		</div>
		<div class="other-shop-details col-md-6">
			<div class="shop-info">
				<div class="shop-hours">
					<p>Opening Hours: <%= @shop.opening.strftime("%l %M %p") %> - <%= @shop.closing.strftime("%l %M %p") %></p>
				</div>
				<div class="shop-address">
					<h4>location: <%= @shop.location %></h4>
				</div>

				<div class="shop-owner-details">
					<p>Owner: <%= @shop.user.username %></p>
					<p>Phone number: <%= @shop.user.phonenumber %></p>
					<p>Email: <%= @shop.user.email %></p>
				</div>
			</div>
		</div>
	</div>
	<br>
	<br>
	<h1>
		<% if @shop.products.any? %>
		All Products by <%= @shop.name %>
		<% else %>
		No Products Listed Yet
		<% end %>
	</h1>
	<div class="shop-products">
		<% @shop_products.in_groups_of(3, false).each do |group| %>
		<div class="product-row">
			<% group.each do |product| %>

			<div class="col_1_of_3 span_1_of_3">
				<div class="view view-fifth">
					<div class="top_box">
						<h3 class="text-center"><%= product.name %></h3>
						<%= link_to shop_product_path(product.shop, product) do %>
						<div class="grid_img">
							<div class="css3"><%= (image_tag product.imageone_url(:large), size: "250x200") %></div>
							<% end %>
							<div class="mask">
								<!--  <div class="info">Quick View</div> -->
							</div>
						</div>
						<div class="price">GHS <%= product.price %></div>
						<p>Cake Maker: 
							<% if product.user %>
							<%= product.user.first_name %>, <%= product.user.last_name %>
							<% else %>  
							<%= product.shop.user.first_name %>, <%= product.shop.user.last_name %>
							<% end %>  
						</p>
						<% if product.shop %>
						<i class="fa fa-check-circle" aria-hidden="true">Verified</i>
						<% end %>
					</div>
				</div>
				<span class="rating">
					<input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
					<label for="rating-input-1-5" class="rating-star1"></label>
					<input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
					<label for="rating-input-1-4" class="rating-star1"></label>
					<input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
					<label for="rating-input-1-3" class="rating-star1"></label>
					<input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
					<label for="rating-input-1-2" class="rating-star"></label>
					<input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
					<label for="rating-input-1-1" class="rating-star"></label>&nbsp;
				</span>
				<ul class="list">
					<li>
						<%= image_tag "plus.png", alt: "" %>
						<ul class="icon1 sub-icon1 profile_img">
							<li><a class="active-icon c1" href="#">Add To Bag </a>
								<ul class="sub-icon1 list">
									<li><h3>add to cart</h3><a href=""></a></li>
									<li><p>or add to wishlist<a href="">?</a></p></li>
								</ul>
							</li>
						</ul>
					</li>
				</ul>
				<div class="clear"></div>
			</a>
		</div>
		<% end %>
	</div>
	<% end %>

	
</div>
</div>
