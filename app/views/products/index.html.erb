<h2><%= link_to "Do You Make Cakes?", new_product_path %></h2>


<h1>Products</h1>

<% @products.each do |product| %>
   <%= product.attachments.each do |attachment| %>
     <% image_tag attachment.image_url(:thumb), attachment.image.url %>
   <% end %>
  <h2><%= link_to product.name, product %></h2>
  <h4><%= product.description %></h4>
  <h4><%= product.price %></h4>
<h2><%= link_to "Edit", [:edit, product] %></h2>

<% end %>