<%= form_tag products_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<br/>

<%= link_to "Advanced Search", new_search_path %>



<h2><%= link_to "Do You Make Cakes?", new_product_path %></h2>
<%=  link_to "Test Index", template_indexes_index_path %> | <%= link_to "Test Show", template_indexes_show_path %>


<h1>Products</h1>

<% @products.each do |product| %>
   <%= link_to (image_tag product.imageone_url(:large)), product %>
  <h4><%= link_to product.name, product %></h4>
  <p><%= truncate(product.description, :length => 10) %> 
  <% if product.description.length > 10 %>
    <%= link_to "Read More", product %></p>
  <% end %>  
  <h4><%= product.price %></h4>
  <p>Cake Maker: <%= product.user.first_name %></p>
<h2><% if product.user == current_user && current_user.seller? %>
<%= link_to "Edit", [:edit, product] %> | <%= link_to "Remove", [product], method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
	<% end %>
</h2>

<% end %>