<%= link_to "Edit", [:edit, @product] %> | <%= link_to "Remove", [@product], method: :delete, data: { confirm: "Are you sure you want to delete this?" } %> | <%= link_to "Upload Another Cake", new_product_path %> |  
<% end %>

