<%= link_to (image_tag @product.imagetwo_url(:thumb)), @product.imagetwo.url %>
<%= link_to (image_tag @product.imagethree_url(:thumb)), @product.imagethree.url %>
<%= link_to (image_tag @product.imagefour_url(:thumb)), @product.imagefour.url %>

<h2><%= @product.name %></h2>
<h4><%= @product.description %></h4>
